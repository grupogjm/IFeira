<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco_cinza"
    tools:context=".TelaDePagamento">

    <Button
        android:id="@+id/Botao_confirmar_pedido"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Confirmar Pedido"
        android:textSize="16dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/grennButton">
    </Button>

    <View
        android:id="@+id/View_Total_pedido"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/back_do_total_pedido"
        app:layout_constraintTop_toBottomOf="@id/Botao_confirmar_pedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </View>
D
    <View
        android:id="@+id/Linha_Total_pedido"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cinza"
        app:layout_constraintTop_toTopOf="@id/View_Total_pedido"
        app:layout_constraintStart_toStartOf="@id/View_Total_pedido"
        app:layout_constraintEnd_toEndOf="@id/View_Total_pedido"/>
    <TextView
        android:id="@+id/Compra_de_total_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Compra de:"
        android:textSize="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/View_Total_pedido"
        app:layout_constraintBottom_toTopOf="@id/Linha_Total_pedido"
        app:layout_constraintStart_toStartOf="@id/View_Total_pedido">
    </TextView>
    <TextView
        android:id="@+id/Nome_total_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:text="João antônio carlos"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/View_Total_pedido"
        app:layout_constraintBottom_toTopOf="@id/Linha_Total_pedido"
        app:layout_constraintStart_toEndOf="@id/Compra_de_total_pedido">
    </TextView>
    <TextView
        android:id="@+id/Itens_total_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="15dp"
        android:text="Itens:"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/Linha_Total_pedido"
        app:layout_constraintStart_toStartOf="@id/View_Total_pedido">
    </TextView>
    <TextView
        android:id="@+id/Valor_itens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="15dp"
        android:text="R$ 29,50"
        app:layout_constraintTop_toBottomOf="@id/Linha_Total_pedido"
        app:layout_constraintEnd_toEndOf="@id/View_Total_pedido">
    </TextView>
    <TextView
        android:id="@+id/Frete_total_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="Frete e manuseio:"
        app:layout_constraintTop_toBottomOf="@id/Itens_total_pedido"
        app:layout_constraintStart_toStartOf="@id/View_Total_pedido">
    </TextView>
    <TextView
        android:id="@+id/Valor_entrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:text="combinar entrega"
        app:layout_constraintTop_toBottomOf="@id/Valor_itens"
        app:layout_constraintEnd_toEndOf="@id/View_Total_pedido">
    </TextView>
    <TextView
        android:id="@+id/Total_total_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:text="Total do pedido:"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/Frete_total_pedido"
        app:layout_constraintStart_toStartOf="@id/View_Total_pedido">
    </TextView>
    <TextView
        android:id="@+id/Valor_total_total_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="15dp"
        android:text="R$ 29,50"
        android:textSize="18dp"
        android:textColor="@color/vermelho_vinho"
        app:layout_constraintTop_toBottomOf="@id/Valor_entrega"
        app:layout_constraintEnd_toEndOf="@id/View_Total_pedido">
    </TextView>
    <TextView
        android:id="@+id/Campo_de_entrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Endereço de entrega"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/View_Total_pedido"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>
    <View
        android:id="@+id/View_endereco_de_entrega"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/quadrado_branco"
        app:layout_constraintTop_toBottomOf="@id/Campo_de_entrega"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </View>

    <View
        android:id="@+id/Seta_endereco_entrega"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_seta_direita"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/Linha_endereco_cima"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Linha_endereco_baixo"/>
    <View
        android:id="@+id/Linha_endereco_cima"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cinza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/View_endereco_de_entrega"/>

    <View
        android:id="@+id/Linha_endereco_baixo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cinza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/View_endereco_de_entrega"/>
    <TextView
        android:id="@+id/nome_no_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:text="João antônio carlos"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/View_endereco_de_entrega"
        app:layout_constraintStart_toStartOf="@id/View_endereco_de_entrega">
    </TextView>

    <TextView
        android:id="@+id/Text_endereco_de_entrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Rua Rosa de Maio, 67, Centro"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/nome_no_endereco"
        app:layout_constraintStart_toStartOf="@id/View_endereco_de_entrega">
    </TextView>

    <TextView
        android:id="@+id/Campo_de_pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Informações de pagamento"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/View_endereco_de_entrega"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>
    <View
        android:id="@+id/View_informacoes_de_pagamento"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/quadrado_branco"
        app:layout_constraintTop_toBottomOf="@id/Campo_de_pagamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </View>
    <View
        android:id="@+id/Seta_informacoes_pagamento"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_seta_direita"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/Linha_pagamento_cima"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Linha_pagamento_baixo"/>
    <View
        android:id="@+id/Linha_pagamento_cima"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/cinza"
        app:layout_constraintBottom_toTopOf="@id/View_informacoes_de_pagamento"/>

    <View
        android:id="@+id/Linha_pagamento_baixo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/View_informacoes_de_pagamento"/>

    <TextView
        android:id="@+id/nome_forma_de_pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="15dp"
        android:text="Forma de pagamento"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/View_informacoes_de_pagamento"
        app:layout_constraintStart_toStartOf="@id/View_informacoes_de_pagamento">
    </TextView>

    <TextView
        android:id="@+id/Nome_da_forma_de_pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="MasterCard (Crédito) com final 4029"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/nome_forma_de_pagamento"
        app:layout_constraintStart_toStartOf="@id/View_informacoes_de_pagamento">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Click para selecionar outra forma de pagamento"
        android:textColor="@color/vermelho_vinho"
        app:layout_constraintTop_toBottomOf="@id/Nome_da_forma_de_pagamento"
        app:layout_constraintStart_toStartOf="@id/View_informacoes_de_pagamento">
    </TextView>
    <TextView
        android:id="@+id/campo_de_detalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Detalhes da compra"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/View_informacoes_de_pagamento"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>
    <View
        android:id="@+id/View_detalhes"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/back_do_total_pedido"
        app:layout_constraintTop_toBottomOf="@id/campo_de_detalhe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:text="12/11/2022"
        android:textColor="@color/grennButton"
        app:layout_constraintBottom_toBottomOf="@id/View_detalhes"
        app:layout_constraintEnd_toEndOf="@id/View_detalhes">
    </TextView>
    <TextView
        android:id="@+id/Itens_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:text="Itens"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="@id/View_detalhes"
        app:layout_constraintStart_toStartOf="@id/View_detalhes">
    </TextView>

    <TextView
        android:id="@+id/Quantidade_detalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="150dp"
        android:text="Quantidade"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="@id/View_detalhes"
        app:layout_constraintStart_toStartOf="@id/View_detalhes">
    </TextView>

    <TextView
        android:id="@+id/Valor_detalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:text="Valor"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="@id/View_detalhes"
        app:layout_constraintEnd_toEndOf="@id/View_detalhes">
    </TextView>
    <TextView
        android:id="@+id/pimenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:text="Pimenta"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/Itens_detalhes"
        app:layout_constraintStart_toStartOf="@id/View_detalhes">
    </TextView>

    <TextView
        android:id="@+id/tomate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="15dp"
        android:text="Tomate"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/pimenta"
        app:layout_constraintStart_toStartOf="@id/View_detalhes">
    </TextView>

    <TextView
        android:id="@+id/melancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="15dp"
        android:text="Melancia"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tomate"
        app:layout_constraintStart_toStartOf="@id/View_detalhes">
    </TextView>

    <TextView
        android:id="@+id/pimentaQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="175dp"
        android:text="500g"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/Quantidade_detalhe"
        app:layout_constraintStart_toStartOf="@id/View_detalhes">
    </TextView>

    <TextView
        android:id="@+id/tomateQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="175dp"
        android:text="1Kg"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/pimenta"
        app:layout_constraintStart_toStartOf="@id/View_detalhes">
    </TextView>

    <TextView
        android:id="@+id/melanciaQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="175dp"
        android:text="1uni"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/tomate"
        app:layout_constraintStart_toStartOf="@id/View_detalhes">
    </TextView>

    <TextView
        android:id="@+id/Valor_pimenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:text="R$ 5,00"
        app:layout_constraintTop_toBottomOf="@id/Valor_detalhe"
        app:layout_constraintEnd_toEndOf="@id/View_detalhes">
    </TextView>

    <TextView
        android:id="@+id/Valor_Tomate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:text="R$ 9,50"
        app:layout_constraintTop_toBottomOf="@id/Valor_pimenta"
        app:layout_constraintEnd_toEndOf="@id/View_detalhes">
    </TextView>


    <TextView
        android:id="@+id/Valor_Melancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="15dp"
        android:text="R$ 15,00"
        app:layout_constraintTop_toBottomOf="@id/Valor_Tomate"
        app:layout_constraintEnd_toEndOf="@id/View_detalhes">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>