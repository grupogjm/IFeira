<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <View
        android:id="@+id/View_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/grenn_padrao"
        app:layout_constraintTop_toTopOf="@id/View_container"
        app:layout_constraintStart_toStartOf="@id/View_container"
        app:layout_constraintEnd_toEndOf="@id/View_container"/>

    <EditText
        android:id="@+id/Edit_Email_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_do_pesquisar_fundo_cinza"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@id/View_container"
        app:layout_constraintStart_toStartOf="@id/View_container"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <EditText
        android:id="@+id/Edit_Senha_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:hint="Senha"
        android:inputType="textPassword"
        android:background="@drawable/back_do_pesquisar_fundo_cinza"
        app:layout_constraintTop_toBottomOf="@id/Edit_Email_login"
        app:layout_constraintEnd_toEndOf="@id/View_container"
        app:layout_constraintStart_toStartOf="@id/View_container"/>

    <TextView
        android:id="@+id/text_esqueciSenhaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci senha"
        android:layout_marginRight="29dp"
        app:layout_constraintTop_toBottomOf="@id/Edit_Senha_login"
        app:layout_constraintEnd_toEndOf="@id/View_container"/>


    <TextView
        android:id="@+id/IFeira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grenn_padrao"
        android:textStyle="bold"
        android:text="IFeira"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/Button_entrar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:text="ENTRAR"
        android:textColor="@color/white"
        android:backgroundTint="@color/grenn_padrao"
        app:layout_constraintTop_toBottomOf="@id/text_esqueciSenhaLogin"
        app:layout_constraintStart_toStartOf="@id/View_container"
        app:layout_constraintEnd_toEndOf="@id/View_container"/>


</androidx.constraintlayout.widget.ConstraintLayout>