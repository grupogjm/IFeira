<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastrarProdutos">

    <include
        android:id="@+id/Toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </include>
    <View
        android:id="@+id/Icone_voltar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_seta_esquerda"
        app:layout_constraintTop_toTopOf="@id/Toolbar"
        app:layout_constraintStart_toStartOf="@id/Toolbar"
        app:layout_constraintBottom_toBottomOf="@id/Toolbar">
    </View>

    <TextView
        android:id="@+id/Text_redefinir_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:text="Cadastro de produto"
        android:textSize="20dp"
        android:textColor="@color/grenn_padrao"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/Toolbar"
        app:layout_constraintEnd_toEndOf="@id/Toolbar"
        app:layout_constraintBottom_toBottomOf="@id/Toolbar"/>

    <ImageView
        android:id="@+id/ImagemView_foto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/Toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/Button_foto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:text="Selecionar\nfoto"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/grenn_padrao"
        app:layout_constraintTop_toBottomOf="@id/Toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/Edit_nomeProduto"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_do_pesquisar_fundo_cinza"
        android:hint="Nome do produto"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Button_foto"/>

    <EditText
        android:id="@+id/Edit_TipoProduto"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_do_pesquisar_fundo_cinza"
        android:hint="Tipo ex:fruta"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Edit_nomeProduto"/>

    <EditText
        android:id="@+id/Edit_ValorProduto"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_do_pesquisar_fundo_cinza"
        android:hint="Valor/Preço"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Edit_TipoProduto"/>

    <EditText
        android:id="@+id/Edit_descricao"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_do_pesquisar_fundo_cinza"
        android:hint="Pequena descrição"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Edit_ValorProduto"/>

    <Button
        android:id="@+id/Button_enviar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/grenn_padrao"
        android:text="Enviar"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/Edit_descricao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/IFeira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grenn_padrao"
        android:textStyle="bold"
        android:text="IFeira"
        android:textSize="18dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>